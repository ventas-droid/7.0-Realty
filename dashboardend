<script>
    // --- CONFIG ---
    const STORAGE_SERVICIOS = "panamoveServicios";
    const STORAGE_LOG = "panamoveLog";

    const serviciosBase = [
        { id: "fotos", nombre: "Fotos PRO", precio: "450 €", coste: 450, cat: "Imagen", desc: "Reportaje profesional.", def: true },
        { id: "video", nombre: "Vídeo Drone", precio: "450 €", coste: 450, cat: "Vídeo", desc: "Tomas aéreas 4K.", def: true },
        { id: "staging", nombre: "Home Staging", precio: "750 €", coste: 750, cat: "Estética", desc: "Mejora visual.", def: true },
        { id: "blog", nombre: "Blog Int.", precio: "3000 €", coste: 3000, cat: "Difusión", desc: "Red internacional.", def: false }
    ];

    // --- LOGIC ---
    function getLog() { return JSON.parse(localStorage.getItem(STORAGE_LOG)) || []; }
    function addLog(text) {
        const list = getLog();
        const now = new Date();
        list.unshift({ time: now.toLocaleTimeString(), date: now.toLocaleDateString(), text });
        localStorage.setItem(STORAGE_LOG, JSON.stringify(list.slice(0, 20)));
        renderLog();
    }
    function renderLog() {
        const list = getLog();
        const el = document.getElementById('recentList');
        if(!el) return;
        el.innerHTML = list.length ? list.map(i => `
            <div class="log-item">
                <span class="log-time">[${i.time}]</span> ${i.text}
            </div>
        `).join('') : '<div style="padding:10px; color:#555;">Sin actividad.</div>';
    }

    function getServicios() {
        try {
            const stored = JSON.parse(localStorage.getItem(STORAGE_SERVICIOS));
            if(!stored) return serviciosBase.map(s => ({...s, activo: s.def}));
            const map = new Map(stored.map(s => [s.id, s.activo]));
            return serviciosBase.map(s => ({...s, activo: map.has(s.id) ? map.get(s.id) : s.def, coste: s.coste}));
        } catch { return serviciosBase.map(s => ({...s, activo: s.def})); }
    }

    function toggleService(id) {
        const current = getServicios();
        const updated = current.map(s => s.id === id ? {...s, activo: !s.activo} : s);
        const changed = updated.find(s => s.id === id);
        localStorage.setItem(STORAGE_SERVICIOS, JSON.stringify(updated.map(s => ({id: s.id, activo: s.activo}))));
        addLog(`Servicio ${changed.activo ? 'ACTIVADO' : 'DESACTIVADO'}: ${changed.nombre}`);
        renderAll();
    }

    function formatMoney(n) { return n.toLocaleString("es-ES", {minimumFractionDigits: 0}); }

    function calcPrice() {
        const input = document.getElementById('precioInput');
        const output = document.getElementById('priceLines');
        if(!input || !output) return;

        const val = parseFloat(input.value) || 0;
        const activos = getServicios().filter(s => s.activo);
        const fijos = activos.reduce((acc, s) => acc + s.coste, 0);
        const comision = val * 0.03;
        const total = comision + fijos + ((comision + fijos) * 0.21);
        const neto = val - total;

        output.innerHTML = `
            <div>Comisión (3%): ${formatMoney(comision)} €</div>
            <div>Servicios Activos: ${formatMoney(fijos)} €</div>
            <div class="total">Total a Pagar: ${formatMoney(total)} €</div>
            <div style="margin-top:5px; color:#38bdf8;">Neto estimado: ${formatMoney(neto)} €</div>
        `;
    }

    function renderServicesGrid() {
        const list = getServicios();
        const grid = document.getElementById('servicesGrid');
        if(grid) {
            grid.innerHTML = list.map(s => `
                <div class="service-card ${s.activo ? 'active' : ''}">
                    <div class="service-name">${s.nombre}</div>
                    <div class="service-price">${s.precio}</div>
                    <div class="service-footer">
                        <span class="state-pill">${s.activo ? 'ACTIVADO' : 'PENDIENTE'}</span>
                        <button class="action-btn" onclick="toggleService('${s.id}')">
                            ${s.activo ? 'DESACTIVAR' : 'ACTIVAR'}
                        </button>
                    </div>
                </div>
            `).join('');
        }
        
        const agencyBox = document.getElementById('agencyActiveServices');
        if(agencyBox) {
            const activos = list.filter(s => s.activo);
            agencyBox.innerHTML = activos.length ? 
                activos.map(s => `<div class="agency-service-pill"><span class="dot"></span> ${s.nombre}</div>`).join('') : 
                '<span style="font-size:0.75rem; color:#64748b;">Ninguno.</span>';
        }
    }

    function renderAll() {
        renderServicesGrid();
        renderLog();
        calcPrice();
    }

    document.addEventListener('DOMContentLoaded', () => {
        renderAll();
        document.getElementById('precioInput').addEventListener('input', calcPrice);
    });
</script>

</body>
</html>
